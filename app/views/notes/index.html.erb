<div class="flex">
<div class="w-[150px] max-w-[300px] bg-gray-200 shadow-md py-2 px-2 ">

<%=link_to "Add Notes ",new_note_path,class:"px-4 py-2  border border-blue-500 rounded hover:bg-blue-500 "%> <br>
</div>
<div class=" w-full grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        

        <%@notes.each do |note|%>
            <div class="border rounded-md shadow-xl p-4  m-4 mb-3">
                <div class="flex justify-between gap-1 mb-2">

                    <%=link_to "Edit",edit_note_path(note),class:"text-green-400 hover:text-green-600"%>
                    <%=link_to "Delete",note_path(note) ,data:{turbo_method: :delete,turbo_confirm: "Confirm Deletion of this item?"},class:"text-red-300 hover:text-red-500" %>
                </div>
                <h2 class="bg-gray-400 text-white text-center py-2 rounded"> <%=note.title.upcase%> </h2> <br>
                <p class="text-justify"> <%=note.content%></p> <br>
             </div>

        <%end%>
       
</div>
</div>