<div class="flex">
<div class="w-[180px] max-w-[300px] bg-gray-200 shadow-md py-4 px-2  ">



<%=link_to new_note_path,class:"px-4 py-2 mt-4  border border-blue-500 rounded hover:bg-blue-500 hover:text-white ",data:{turbo_frame:"add_note"} do%>
    <i class="fa-solid fa-plus"></i> Add Notes
<%end%>
 <br>
</div>
 <div class="flex flex-col flex-grow">
<%= turbo_frame_tag "add_note"  %>
<div id="notes_list" class=" w-full grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        
        <%@notes.each do |note|%>
            <%=turbo_frame_tag "note_#{note.id}" do%>  
                <%=render "shared/note", note:note%>
            <%end%>

        <%end%>
       
</div>
</div>
</div>