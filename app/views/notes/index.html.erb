<div class="flex">
<div class="w-[180px] max-w-[300px] bg-gray-200 shadow-md py-4 px-2  ">



<%=link_to new_note_path,class:"px-4 py-2 mt-4  border border-blue-500 rounded hover:bg-blue-500 hover:text-white " do%>
    <i class="fa-solid fa-plus"></i> Add Notes
<%end%>
 <br>
</div>
<div class=" w-full grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        

        <%@notes.each do |note|%>
            <div class="border rounded-md shadow-xl p-4  m-4 mb-3">
                <div class="flex justify-between gap-1 mb-2">

                    <%=link_to edit_note_path(note),class:"text-green-300 hover:text-green-600 " do%>
                        <i class="fa-regular fa-pen-to-square"></i>
                    <%end%>
                    <%=link_to note_path(note) ,data:{turbo_method: :delete,turbo_confirm: "Confirm Deletion of this item?"},class:"text-red-300 hover:text-red-500 " do%>
                    <i class="fa-regular fa-trash-can"></i>
                    <%end%>
                </div>
                <%=link_to note_path(note) do%>
                <h2 class="bg-gray-400 text-white text-center py-2 rounded hover:bg-blue-400"> <%=note.title.upcase%> </h2> <br>
                <%end%>
               
             </div>

        <%end%>
       
</div>
</div>