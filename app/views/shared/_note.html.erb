<div class="border rounded-md shadow-xl p-4  m-4 mb-3">
                    <div class="flex justify-between gap-1 mb-2">

                        <%=link_to edit_note_path(note),class:"text-green-300 hover:text-green-600 " do%>
                            <i class="fa-regular fa-pen-to-square"></i>
                        <%end%>
                        <%=link_to note_path(note),data:{turbo_frame: "_top"},class:"text-blue-300 hover:text-blue-600 " do%>
                            <i class="fa-solid fa-book-open"></i>
                        <%end%>
                        <%=link_to note_path(note) ,data:{turbo_method: :delete,turbo_confirm: "Confirm Deletion of this item?"},class:"text-red-300 hover:text-red-500 " do%>
                        <i class="fa-regular fa-trash-can"></i>
                        <%end%>
                    </div>
                    <%=link_to note_path(note) ,data:{turbo_frame: "_top"} do%>
                    <h2 class="bg-gray-400 text-white text-center py-2 rounded hover:bg-blue-400"> <%=note.title.upcase%> </h2> 
                    <%end%>
                
                     </div>