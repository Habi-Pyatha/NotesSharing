<%if @pending_requests.empty?%>
    <h2 class="text-center font-semibold text-2xl text-center">No Friend requests.</h2>
<%else%>
    <h2 class="text-center font-semibold text-2xl text-center">Pending Friend Requests</h2>
    <% @pending_requests.each do |friendship| %>
    <div class="border rounded p-2 mb-2 flex space-between m-2 items-center shadow-md ">
        <%# image_tag friendship.user.user_image.variant(resize_to_limit: [50, 50]).processed, alt: "Profile" if friendship.user.user_image.attached? %>
        <p class="text-lg font-semibold p-3"><%= friendship.user.username %></p>
        <div class="flex ml-auto">

            <%= button_to 'Accept', accept_friendship_path(friendship), method: :post, class: " ml-auto border bg-blue-300 border-blue-400 p-3 rounded hover:bg-green-500 hover:text-white" %>
            <%= button_to 'Reject', reject_friendship_path(friendship), method: :post, class: "border bg-blue-300 border-blue-400 mx-2 p-3 rounded hover:bg-red-500 hover:text-white " %>
        </div>
    </div>
    <% end %>
<%end%>
