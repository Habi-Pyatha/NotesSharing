<div class="flex justify-center ">
<div class=" md:max-w-[40em]  bg-gray-300 mt-3 border rounded-e-md shadow-sm p-6 flex flex-col items-center justify-center">

<h2 class="font-bold text-blue-600 text-lg">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3  ">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"w-full py-2 px-4" %>
  </div>
  <div class="mb-3">
    <%= f.label :username %><br />
    <%= f.text_field :username, autocomplete: "username",class:"w-full py-2 px-4" %>
  </div>
  <div class="mb-3">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autocomplete: "phone" ,class:"w-full py-2 px-4"%>
  </div>

  <div class="mb-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"w-full py-2 px-4" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"w-full py-2 px-4" %>
  </div>

  <div class="mt-4 text-center bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded mb-3">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>